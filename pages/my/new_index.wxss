/* pages/my/index.wxss */
@import "/style/weui.wxss";

Page {
  background-color: #fff;
  width: 100%;
  height: 100%;
}

.header {
  height: 220px;
  width: 100%;
  position: relative;
}

.red_class {
  width: 100%;
  height: 100px;
  border-bottom-left-radius: 200%;
  border-bottom-right-radius: 200%;
  background-color: #e94b4b;
}

.header_content {
  position: absolute;
  left: 5%;
  top: 0%;
  width: 90%;
  border-radius: 5px;
  background-color: #fff;
	height: 405rpx;
	box-shadow: 0px 0px 35px 0px 
		rgba(230, 64, 62, 0.3);
}

.heard_img{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 9rpx;
  right: 9rpx;
}

.triangle-topleft {
  width: 0;
  height: 0;
  /* border-top: 50px solid #dcbb00;
  border-right: 50px solid transparent;  */
  position: absolute;
}

.triangle-topleft image{
  width: 80rpx;
  height: 80rpx;
}

.isLogin {
  text-align: center;
  width: 100%;
}

.avatar image {
  width: 130rpx;
  height: 130rpx;
  margin-top: 31rpx;
  border-radius: 100rpx;
}

.nickname {
  font-size: 38rpx;
}

.header_item {
  width: 33.3333%;
  z-index: 10;
}

.header_flex {
  margin-top: 10px;
  text-align: center;
  z-index: 10;
}

.hasImage{
  z-index: 99;
}

.header_titile {
  margin-bottom: 10rpx;
  font-size: 28rpx;
	color: #cc3333;
}
.header_text{
  font-size: 28rpx;
	color: #666666;
}



.header_back image{
  z-index: 1;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 110rpx;
}


.text {
  color: #e1e1e1;
  width: 1rpx;
	height: 35rpx;
  z-index: 10;
}

.weui-grids {
  border-top: 1rpx solid #fff;
  border-left: 1rpx solid #fff;
}

.weui-grid {
  border-right: 1rpx solid #fff;
  border-bottom: 1rpx solid #fff;
}

.heard_btn {
  position: absolute;
  left: 41%;
  background-color: none;
  border-radius: 200rpx;
  width: 130rpx;
  height: 130rpx; 
  opacity: 0;
}

.heard_btn::after {
  border: none;
}

.head_name{
  font-size: 38rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
}

.head_age{
  width: 55rpx;
	height: 24rpx;
	background-color: #f16665;
	border-radius: 5rpx;
  font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
  padding: 4rpx;
}

.heard_msg{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 0rpx;
	letter-spacing: 0rpx;
	color: #8c8c8c;
  margin: 20rpx auto 30rpx;
}

.grid_name{
	font-size: 28rpx;
	color: #666666;
}

.weui-grid__label{
  margin-top: 32rpx;
}

