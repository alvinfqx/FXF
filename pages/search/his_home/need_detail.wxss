@import "/common/weui.wxss";

Page {
  background-color: #f6f7f8;
  height: 100%;
  width: 100%;
}

/*需求 star  */

.news_section {
  margin-bottom: 10px;
  background-color: #fff;
  padding-bottom: 20px;
}

.heard_class image {
  width: 50px;
  height: 50px;
  display: block;
  border-radius: 120rpx;
  margin-right: 10px;
}

.title_text {
  font-size: 30rpx;
}

.need_age {
  background-color: #e84f54;
  color: #fff;
  padding: 2px 5px;
  font-size: 20rpx;
  margin-left: 8px;
  border-radius: 5px;
}

.news_section button {
  font-size: 12px;
  color: red;
  border: 1px solid red;
  background-color: transparent;
}

.cont {
  padding: 0px 5px 5px 20px;
}

.cont_title {
  color: #000;
  font-size: 30rpx;
}

.cont_detail {
  color: #b8b9ba;
  overflow: hidden;
  width: 100%;
  white-space: nowrap; /*不显示的地方用省略号...代替*/
  text-overflow: ellipsis; /* 支持 IE */
  font-size: 30rpx;
}

.row_one {
  font-size: 30rpx;
  padding: 5px 10px 10px 20px;
}

.row_one .row_item_two {
  width: 30%;
  color: #2a6ebc;
  text-align: right;
}

.row_one .row_item_one {
  width: 70%;
  color: #000;
}

.row_two {
  font-size: 30rpx;
  padding: 5px 10px 10px 20px;
  color: #000;
}

.row_three {
  font-size: 30rpx;
  padding: 5px 10px 20px 20px;
}

.row_three .row_item_two {
  width: 30%;
  text-align: right;
  color:#979899;
}

.row_three .row_item_one {
  width: 70%;
  color: #000;
}

/*需求 end  */

.input_class{
  position: fixed;
  bottom: 50rpx;
  width: 100%; 
}

.input{
  border: 1px solie #d7d7d7;
  border-radius: 20px;
  height: 90rpx; 
  width: 90%;
  background-color: #fff;
  padding-left: 10px;
  margin: 0 auto;
}

.phcolor{
  font-size: 30rpx;
	color: #cdcdcd;
}
