@import "/common/weui.wxss";

Page {
  background-color: #f6f7f8;
  height: 100%;
  width: 100%;
  color: #868788;
}

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}



/*头部 star  */

.hearder {
  height: 260px;
  background-color: #fff;
  margin-bottom: 5px;
  text-align: center;
  position: relative;
}

.imgview image {
  width: 100%;
  height: 150px;
  /* border-bottom-left-radius: 200%; */
  /* border-bottom-right-radius: 200%; */
}

.heard_img_view {
  height: 80px;
  width: 80px;
  border-radius: 50%;
  padding: 2px;
  background-color: #fff;
  border: 1px solid #ccc;
  position: absolute;
  left: 40%;
  top: 40%;
}

.heard_img_view image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.name {
  margin-top: 30px;
}

.name_text {
  font-size: 45rpx;
  color: #000;
}

.name_age {
  background-color: #e84f54;
  color: #fff;
  padding: 2px 10px;
  font-size: 25rpx;
  margin-left: 8px;
  border-radius: 5px;
}

.name_content {
  font-size: 30rpx;
  color: #909090;
}

/*头部 end  */

/*tab star  */

.weui-tab__content {
  margin-top: 5px;
}

.weui-navbar {
  background-color: #fff;
}

.weui-navbar__slider {
  background-color: #ef5352;
}

/* .weui-navbar__item{
  border-right: 1px solid #dcdedd;
} */


.weui-navbar__item.weui-bar__item_on {
  color: #ef5352;
}

.weui-navbar {
  border-bottom: none;
}

/*tab end  */

/*地图 star */

.map_container {
  height: 100vh;
  width: 100%;
}

.map {
  height: 100%;
  width: 100%;
}

/*地图 end */

/*动态 star  */

.active_content {
  background-color: #fff;
  padding: 5px;
}

.time {
  width: 20%;
  font-size: 80%;
  font-weight: bold;
  color: #000;
}

.imgs {
  width: 35%;
}

.contents {
  width: 45%;
  position: relative;
}

.img_four image {
  width: 50px;
  height: 50px;
  margin-left: 3%;
}
.img_one image{
  width: 80px;
  height: 80px;
}


.contends_detail {
  font-size: 30rpx;
  color: #000;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20px; 
}
.contends_num{
  font-size: 30rpx;
  position: absolute;
  bottom: 0;
}

.end_class{
  height: 20px;

}

/*动态 end  */


/*需求 star  */
.news_section {
  margin-bottom: 30rpx;
}
.heard_class image {
  width: 50px;
  height: 50px;
  display: block;
  border-radius: 120rpx;
  margin-right: 10px;
}

.title_text {
  font-size: 30rpx;
  color: #000000;
}

.need_age{
  background-color: #e84f54;
  color: #fff;
  padding: 2px 5px;
  font-size: 20rpx;
  margin-left: 8px;
  border-radius: 5px;
}

.news_section button {
  font-size:12px;
  color: red;
  border:1px solid red;
  background-color: transparent;
}

.cont{
  padding: 0px 5px 5px 15px;
}

.cont_title{
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #000000;
}

.cont_detail{
  overflow: hidden;
  width: 100%;
  white-space: nowrap; /*不显示的地方用省略号...代替*/
  text-overflow: ellipsis; /* 支持 IE */
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #999999;
}
.row_one{
  font-size: 30rpx;
  padding: 5px 10px 10px 27rpx;
}

.row_one .row_item_two{
  width: 30%;
  text-align: right;
  font-size: 28rpx;
	color: #0099ff;
}

.row_one .row_item_one{
   width: 70%;
  font-size: 28rpx;
	color: #333333;
}

.row_two{
  padding: 5px 10px 10px 29rpx;
  font-size: 28rpx;
	color: #333333;
}
.row_three{
   font-size: 30rpx;
  padding: 5px 10px 15rpx 27rpx;
}
.row_three .row_item_two{
width: 30%;
  text-align: right;
  font-size: 28rpx;
	color: #999999;
}

.row_three .row_item_one{
  width: 70%;
  font-size: 28rpx;
	color: #333333;
}

.weui-cell:after {
  border-bottom: 1rpx solid #f0f0f0;
}

.weui-cell:before {
  border-top: 1rpx solid #f0f0f0;
}

/*需求 end  */
