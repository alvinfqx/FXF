@import "/common/weui.wxss";
.titile_class{
  width: 100%;
  height: 40px;
  background-color: #f2f2f2;
  padding: 5px;
}

.weui-input{
  background-color: #fff;
  border-radius: 6px;
  width: 90%;
  font-size: 25rpx;
  text-align: center;
  margin: 5px auto 0px;
}


.heard-location-icon{
  width: 30rpx;
  height: 30rpx;
}

.position_view{
  position: relative;
  height: 40px;
}

.positon_input{
  padding-top: 7px;
  margin-left: 10px;
  font-size: 16px;
}

.position_tip{
  position: absolute;
  right: 35px;
  top:9px;
  color: #bcbcbc;
  font-size: 12px;
}

.searchLetter{
    position: fixed;
    right: 0;
    width: 40px;
    height: 100%;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1;
    margin-top: 20px;
}
.searchLetter view{
    height: 70rpx;
}
.touchClass{
    color: #666;
    font-size: 10px; 
}
.showSlectedLetter{
    background-color: rgba(0, 0, 0,0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top:50%;
    left: 50%;
    margin: -50px;
    width: 100px;
    height: 100px;
    border-radius:10px; 
    font-size: 26px;
    z-index: 1
}
.selection{
    display: flex;
    width: 100%;
    flex-direction: column;
}
.item_letter{
    display: flex;
    background-color: #f8f8f8;
    height: 30px;
    padding-left: 10px;
    align-items: center;
}
.item_city{
    display: flex;
    background-color: #fff;
    height: 40px;
    padding-left: 10px;
    align-items: center;
    border-bottom: 1px solid #f8f8f8;
    color:#555;
     font-size: 16px; 
}