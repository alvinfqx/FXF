@import "/common/weui.wxss";

Page {
  background-color: #f6f7f8;
  height: 100%;
  width: 100%;
  font-size: 30rpx;
}

.page-body{
  margin-bottom: 150rpx;
}

.swiper {
  position: relative;
}

.swiper_center {
  width: 100%;
  height: 477rpx;
}

.img_num {
  position: absolute;
  bottom: 10px;
  right: 20px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.7);
  font-size: 24rpx;
  line-height: 60rpx;
  border-radius: 5px;
  padding: 0 20rpx;
  letter-spacing: 0px;
}

.title {
  background-color: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 10px;
}

.title_tip {
  font-family: PingFang-SC-Regular;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #000000;
  margin-bottom: 30rpx;
}

.money_class {
  font-size: 30rpx;
	font-weight: normal;
	letter-spacing: 0px;
	color: #f05857;
}

.text_class {
  font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 37rpx;
	letter-spacing: 0rpx;
	color: #666467;
  background-color: #faf3f3;
	border-radius: 5px;
  margin-left: 21rpx;
  margin-right: 21rpx;
  padding: 8rpx;
}

.time_class {
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 37rpx;
	letter-spacing: 0px;
	color: #666666;
}

.room_information {
  margin-bottom: 10px;
  background-color: #fff;
  padding: 10px;
}

.title_infor {
  margin-left: 19rpx;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 37rpx;
	letter-spacing: 0rpx;
	color: #000000;
}

.infor_content {
  padding-left: 10%;
  position: relative;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 72rpx;
	letter-spacing: 0px;
	color: #666666;
}

.tip_title{
  margin-bottom: 30rpx;
}

.content_item_class {
  margin-left: 5%;
}

.title_item_class {
  position: absolute;
  left: 62%;
}

.last_content {
  position: absolute;
  left: 75%;
}

.room_attr {
  margin-bottom: 10px;
  background-color: #fff;
  padding: 10px;
}

.attr_content {
  line-height: 2.5;
  color: #6d6e6f;
  padding-left: 5%;
}

.attr_item{
  margin-left: 8%;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 72rpx;
	letter-spacing: 0rpx;
	color: #666666;
}

.room_desc{
  margin-bottom: 10px;
  background-color: #fff;
  padding: 10px;
}

.desc_content{
  color:#6e6f70;
  padding: 0 40rpx;
  line-height: 72rpx;
  font-size: 28rpx;
}

.desc_detail{
  font-size: 28rpx;
	font-weight: normal;
	letter-spacing: 0px;
  padding: 0 40rpx;
	color: #000000;
  margin-bottom: 30rpx;
}

.desc_text{ 
  line-height: 56rpx;
}


.left_btn{
  border-radius:0px;
  width: 50%；
}

.right_obtn {
  border-radius:0px;
  width: 50%；
}

.btn{
   position: fixed;
   bottom: 0;
   background-color: #fff;
   width: 100%;
}

.btn_first_view{
  width: 50%;
}

.btn_second_view{
  width: 50%;
}

 .btn button::after{
   border: none;
}
.btn button{
   border: none;
} 



